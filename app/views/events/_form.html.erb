<%= form_for([@employee, @event]) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :eventname %><br>
    <%= f.text_field :eventname %>
  </div>
  <div class="field">
    <%= f.label :eventdate %><br>
    <%= f.datetime_select :eventdate , :discard_hours => true, :start_year  => 2015%>
  </div>
  <div class="field">
    <%= f.label :eventstarttime %><br>
    <%= f.time_select :eventstarttime, :ampm => true, :minute_step => 15 %>
  </div>
  <div class="field">
    <%= f.label :eventendtime %><br>
    <%= f.time_select :eventendtime, :ampm => true, :minute_step => 15 %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :cols => "50", :rows => "10" %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :additionalinfo %><br>
    <%= f.text_area :description, :cols => "50", :rows => "10" %>
  </div>
  <div class="field">
    <%= f.label :invite %><br>
    <%= f.text_field :invite %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
